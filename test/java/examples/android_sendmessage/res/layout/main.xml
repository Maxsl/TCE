<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:textAlignment="center" android:visibility="visible">

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="97dp"
            android:text="发送" android:layout_below="@+id/textView1" android:layout_toRightOf="@+id/editContent"/>

    <EditText
            android:id="@+id/editContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" android:layout_alignBaseline="@+id/button1" android:layout_alignBottom="@+id/button1"
            android:layout_alignParentLeft="true" android:inputType="text"
            android:textColor="@android:color/background_dark">

        <requestFocus />
    </EditText>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editMyID"
            android:layout_gravity="center"
            android:editable="false"
            android:password="false" android:text="My ID: A1003" android:textColor="@android:color/holo_red_dark"
            android:inputType="text" android:layout_below="@+id/textView1" android:layout_toRightOf="@+id/textView1"
            android:layout_toEndOf="@+id/textView1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Peer ID"
            android:id="@+id/textView2"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="20dp" android:layout_above="@+id/editContent"
            android:layout_toRightOf="@+id/textView1" android:layout_toEndOf="@+id/textView1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTarget"
            android:text="A1002" android:textColor="@android:color/black"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_alignBottom="@+id/textView2" android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="New Text"
			android:id="@+id/textMessage"
			android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="false"
			android:height="60dp" android:textStyle="bold" android:textColor="@android:color/holo_red_light"/>

</RelativeLayout>

